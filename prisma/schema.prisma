generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// 热门搜索模型
// - 用途 ：存储每个路径的搜索次数和分类
// 热门搜索模型
model TrendingSearch {
  id        String   @id @default(cuid())
  path      String
  category  String
  count     Int      @default(1)
  isDeleted Boolean  @default(false) // 软删除标志，用于内容审查
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([path])
  @@map("trending_searches")
}

// 用户搜索记录模型（用于去重）
// - 用途 ：记录用户每日搜索，防止重复计数
// - 特点 ：临时数据，定期清理
model UserSearchLog {
  id        String   @id @default(cuid())
  path      String
  userHash  String   // 用户标识的哈希值
  date      String   // 格式：YYYY-MM-DD
  createdAt DateTime @default(now())

  @@unique([path, userHash, date])
  @@map("user_search_logs")
}

// 搜索记录模型
// - 用途 ：完整的搜索历史，包含用户信息
// - 特点 ：原始数据，用于分析和审计
model SearchRecord {
  id        String   @id @default(cuid())
  path      String
  category  String?
  userAgent String?
  ip        String?
  createdAt DateTime @default(now())

  @@map("search_records")
}
